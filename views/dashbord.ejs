<!DOCTYPE html>
<html>
<head>
  <title>Dashboard</title>
  <link rel="stylesheet" type="text/css" href="/css/dasbord.css">
  
</head>
<body>
  <div class="container">
    <div class="left-section">
      <h2>Add Store/Business Information</h2>

      <form method="POST" action="/seller/storeInfo">
        <div class="form-group">
          <label for="address">Address:</label>
          <input type="text" id="address" name="address" required>
        </div>
        <div class="form-group">
          <label for="gst">GST:</label>
          <input type="text" id="gst" name="gst" required>
        </div>
        <div class="form-group">
          <label for="image">Image:</label>
          <input type="file" id="image" name="image" required>
        </div>
        <div class="form-group">
          <label for="storeTiming">Store Timing:</label>
          <input type="text" id="storeTiming" name="storeTiming" required>
        </div>
        <button type="submit">Add Store</button>
      </form>

      <h2>Add Item</h2>
      <form method="POST" action="/seller/addInventory">
        <div class="form-group">
          <label for="category">Category:</label>
          <input type="text" id="category" name="category" required>
        </div>
        <div class="form-group">
          <label for="subCategory">Subcategory:</label>
          <input type="text" id="subCategory" name="subCategory" required>
        </div>
        <div class="form-group">
          <label for="productName">Product Name:</label>
          <input type="text" id="productName" name="productName" required>
        </div>
        <div class="form-group">
          <label for="MRP">MRP:</label>
          <input type="number" id="MRP" name="MRP" required>
        </div>
        <div class="form-group">
          <label for="SP">Selling Price:</label>
          <input type="number" id="SP" name="SP" required>
        </div>
        <div class="form-group">
          <label for="quantity">Quantity:</label>
          <input type="number" id="quantity" name="quantity" required>
        </div>
        <div class="form-group">
          <label for="images">Image:</label>
          <input type="text" id="images" name="images" placeholder="Upload Img URL " required>
        </div>
        <button type="submit">Add Item</button>
      </form>
    </div>

    <div class="right-section">
      <Button id="copyButton" >Copy Personal URL%></Button>
      <h2>Store Items</h2>
      <div class="Card">
        <ul>
          <% sellerCard.forEach(function(item) { %>
            <li>
              <img src="<%= item.images %>" alt="<%= item.productName %>">
              <p>Category: <%= item.category %></p>
              <p>Subcategory: <%= item.subCategory %></p>
              <p>Subcategory: <%= item.subcategory %></p>
              <p>Product Name: <%= item.productName %></p>
              <p>MRP: <%= item.MRP %></p>
              <p>Selling Price: <%= item.SP %></p>
              <p>Quantity: <%= item.quantity %></p>
            </li>
          <% }); %>
        </ul>
      </div>
    </div>
    </div>
  </body>
  <script>
    // Render sellerId as a JavaScript variable
    var sellerId = "<%- sellerId %>";
    document.getElementById("copyButton").addEventListener("click", function() {
      console.log('sellerid', sellerId);
      var textToCopy = "http://localhost:3000/seller/sellerinventory/" + sellerId;
      navigator.clipboard.writeText(textToCopy).then(function() {
      }).catch(function(error) {
        console.error("Failed to copy text to clipboard: ", error);
      });
    });
  </script>
</html>

